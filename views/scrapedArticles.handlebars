 <div class="hero">
       <h1>Scraped Articles</h1> 
    </div>
    <article id="main">
        <div class="row">
            <div class="column">
<li style="list-style: none;text-align:center;margin:0 auto;"><a class="scrape-button" href="/api/scrape">Mongo Scrape!</a></li> 
</div>
<div class="column">
<li style="list-style: none;text-align:center;margin:0 auto;"><a class="clear-button" href="/api/clearArticles">Mongo Clear!</a></li> 
</div>
       </div>
       <section class="row">
            {{#each articles}}
            <div class="articleBox">
            <h3><a href="{{link}}">{{title}}</a></h3>
                        <section class="column">
                <img src="{{image}}" style="width:50%;height:auto;">
            </section>
            <div class="noteAreaTitle" data-id="{{_id}}"><h3>Note: {{note.title}}</h3></div>
            <div class="noteAreaBody" data-id="{{_id}}"><p>{{note.body}}</p></div>
            {{#ifEquals saved "true"}}
            <button data-id={{_id}} class="saveButton savedActive">Saved!</button>
            {{/ifEquals}}
            {{#ifEquals saved "false"}}
            <button data-id={{_id}} class="saveButton">Save Article</button>
            {{/ifEquals}}
            <button data-id={{_id}} class="addNoteButton">Create Note</button>
            <div class="noteTaker" data-id="{{_id}}" style="display:none;">
                <div><input class="titleInput" name='title' data-id="{{_id}}" placeholder="Title"></div>
                <div><textarea class="bodyInput" name='body' data-id="{{_id}}" placeholder="Note"></textarea></div>
                </div>
            </div>
            {{/each}}
        </section>
    </article>