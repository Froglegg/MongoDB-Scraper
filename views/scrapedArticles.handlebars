        <h2 style="text-align:center;">Node.js Express scraper utilizing Axios, Cheerio and MongoDB</h2>
        <section class="row">
            {{#each articles}}
            <div class="column">
            <h3><a href="{{link}}">{{title}}</a></h3>
            <div class="noteAreaTitle" data-id="{{_id}}"><h4>{{note.title}}</h4></div>
            <div class="noteAreaBody" data-id="{{_id}}"><p>{{note.body}}</p></div>
            <button data-id={{_id}} class="saveButton">Save Article</button>
            <button data-id={{_id}} class="addNoteButton">Create Note</button>
            <div class="noteTaker" data-id="{{_id}}" style="display:none;">
                <input class="titleInput" name='title' data-id="{{_id}}">
                <textarea class="bodyInput" name='body' data-id="{{_id}}"></textarea>
                </div>
            </div>
           
            {{/each}}
          
        </section>
